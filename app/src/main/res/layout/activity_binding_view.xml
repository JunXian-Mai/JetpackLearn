<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ViewBindingActivity">

  <Button
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start DataBinding!"
    android:textAllCaps="false"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <org.markensic.learn.jetpack.widget.SquareImageView
    android:id="@+id/siv"
    android:layout_width="275dp"
    android:layout_height="300dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn"
    android:src="@drawable/avatar"
    />

  <org.markensic.learn.jetpack.widget.CircleView
    android:id="@+id/cv1"
    android:layout_width="100dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/cv2"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/siv"/>

  <org.markensic.learn.jetpack.widget.CircleView
    android:id="@+id/cv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/cv1"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/siv"/>

</androidx.constraintlayout.widget.ConstraintLayout>