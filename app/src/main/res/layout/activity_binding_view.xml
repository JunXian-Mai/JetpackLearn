<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ViewBindingActivity">

  <Button
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start DataBinding!"
    android:textAllCaps="false"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <org.markensic.learn.jetpack.widget.DragHelperView
    android:id="@+id/drag_helper"
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/avatar"
      android:scaleType="fitXY"/>

  </org.markensic.learn.jetpack.widget.DragHelperView>

  <org.markensic.learn.jetpack.widget.DragListenerView
    android:id="@+id/drag_listener"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/drag_helper"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
      android:id="@+id/img_1"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/avatar"
      android:contentDescription="这是"
      android:scaleType="fitXY"/>

    <ImageView
      android:id="@+id/img_2"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/avatar"
      android:contentDescription="头像\n"
      android:scaleType="fitXY"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:orientation="vertical"
      android:background="@color/teal_200">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="描述:"
        android:textSize="16sp"
        android:textColor="@color/teal_700"/>

      <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/purple_200"/>

    </LinearLayout>

  </org.markensic.learn.jetpack.widget.DragListenerView>

</androidx.constraintlayout.widget.ConstraintLayout>